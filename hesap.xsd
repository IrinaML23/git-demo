<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<xsd:annotation>
		<xsd:documentation>
			Purchase validation schema
		</xsd:documentation>
		<xsd:appinfo>
			Version: 1.0
			Data: 14.01.2023
		</xsd:appinfo> 	
	</xsd:annotation>

	<xsd:element name="shops">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="shop" minOccurs="1" maxOccurs="unbounded"/>
			</xsd:sequence>
		</xsd:complexType>		
	</xsd:element>
	
	<xsd:element name="shop">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="address" type="xsd:string"/>
				<xsd:element name="phone" type="xsd:string" minOccurs="0"/>
				<xsd:element name="centralAddress" type="xsd:string" minOccurs="0"/>				
				<xsd:element ref="purchases"/>
			</xsd:sequence>
			<xsd:attribute name="name" type="xsd:string"/>
		</xsd:complexType>		
	</xsd:element>
	
	<xsd:element name="purchases">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="purchase" minOccurs="1" maxOccurs="unbounded"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	
	
	<xsd:element name="purchase">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="datePurchase" type="xsd:date"/>
				<xsd:element name="timePurchase" type="xsd:time"/>
				<xsd:element name="checkNumber" type="xsd:string"/>
				<xsd:element ref="totalCost"/>
				<xsd:element ref="totalTax"/>
				<xsd:element ref="taxes"/>
				<xsd:element ref="products"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:element name="totalCost">
		<xsd:complexType >
			<xsd:simpleContent>
				<xsd:extension base="xsd:decimal">
					<xsd:attribute ref="currency"/>
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:element name="totalTax">
		<xsd:complexType>
			<xsd:simpleContent>
				<xsd:extension base="xsd:decimal">
					<xsd:attribute ref="currency"/>
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:element name="taxes">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="tax" minOccurs="1" maxOccurs="100"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:element name="tax">
		<xsd:complexType>
			<xsd:simpleContent>
				<xsd:extension base="xsd:decimal">
					<xsd:attribute ref="currency"/>
					<xsd:attribute ref="percent"/>	
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
	</xsd:element>	
	
	<xsd:element name="products">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="product" minOccurs="1" maxOccurs="unbounded"/>
			</xsd:sequence>			
		</xsd:complexType>
	</xsd:element>
	
	<xsd:element name="product">
		<xsd:complexType>
				<xsd:sequence>
					<xsd:element ref="id" minOccurs="0"/>
					<xsd:element name="name" type="xsd:string"/>
					<xsd:element ref="weight" minOccurs="0"/>
					<xsd:element ref="priceKG" minOccurs="0"/>
					<xsd:element ref="taxPercent"/>
					<xsd:element ref="price" maxOccurs="1"/> 
					<xsd:element ref="sale" minOccurs="0"/>					
				</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:element name="id" type="xsd:positiveInteger">
		<xsd:unique name="idName">
			<xsd:selector xpath="id"/>
			<xsd:field xpath="@id"/>
		</xsd:unique>
	</xsd:element>
	
	<xsd:element name="taxPercent">
		<xsd:simpleType>
			<xsd:restriction base="xsd:string">
				<xsd:pattern value="%[0-9]{2}"/>
			</xsd:restriction>
		</xsd:simpleType>
	</xsd:element>

	<xsd:element name="weight">
		<xsd:complexType>
			<xsd:simpleContent>
				<xsd:extension base="xsd:decimal">
					<xsd:attribute ref="unit"/>
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:element name="priceKG">
		<xsd:complexType>
			<xsd:simpleContent>
				<xsd:extension base="xsd:decimal">
					<xsd:attribute ref="currency"/>
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:element name="price">
		<xsd:complexType>
			<xsd:simpleContent>
				<xsd:extension base="xsd:decimal">
					<xsd:attribute ref="currency"/>
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:element name="sale">
		<xsd:complexType>
			<xsd:simpleContent>
				<xsd:extension base="salePrice">
					<xsd:attribute ref="currency"/>
					<xsd:attribute ref="percent"/>
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
	</xsd:element>
			
	<xsd:attribute name="currency">
		<xsd:simpleType>
			<xsd:restriction base="xsd:string">
				<xsd:enumeration value="TL"/>
			</xsd:restriction>
		</xsd:simpleType>	
	</xsd:attribute>
	
	<xsd:attribute name="percent">
		<xsd:simpleType>
			<xsd:restriction base="xsd:integer">
				<xsd:minInclusive value="0"/>			
				<xsd:maxInclusive value="100"/>
			</xsd:restriction>
		</xsd:simpleType>	
	</xsd:attribute>
	
	<xsd:attribute name="unit">
		<xsd:simpleType>
			<xsd:restriction base="xsd:string">
				<xsd:enumeration value="kg"/>			
			</xsd:restriction>
		</xsd:simpleType>						
	</xsd:attribute>
	
	<xsd:simpleType name="salePrice">
		<xsd:restriction base="xsd:decimal">
			<xsd:maxExclusive value="0"/>
		</xsd:restriction>
	</xsd:simpleType>



	

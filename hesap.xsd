			<xsd:restriction>
				<xsd:enumeration value='OOO"FMarket"'/>
			</xsd:restriction>
		</xsd:simpleType>
		
	8. <SEQUENCE> (порядок элементов)
		<xsd:complexType name="USAddress">
			<xsd:sequence>
				<xsd:element name="name" type="xsd:string"/>
				<xsd:element name="street" type="xsd:string"/>
				<xsd:element name="city" type="xsd:string"/>
				<xsd:element name="state" type="xsd:string"/>
				<xsd:element name="zip" type="xsd:decimal"/>
			</xsd:sequence>
			<xsd:attribute name="country" type="xsd:NMTOKEN" fixed="US"/>			
		</xsd:complexType>		
		
		<CHOICE> (один из элементов может появиться в документе) 
		<xsd:complexType name="PurchaseOrderType">
			<xsd:sequence>
				<xsd:choice>
					<xsd:element name="complexUSAddress" type="complexUSAddress"/>
					<xsd:element name="singleUSAddress" type="USAddress"/>
				</xsd:choice>
				<xsd:element name="comment" ref="comment" minOccurs="0"/>
				<xsd:element name="items" type="Items"/>
			</xsd:sequence>
			<xsd:attribute name="orderDate" type="xsd:date" />	
		</xsd:complexType>
		
		<ALL> (элементы в произвольном порядке, но не более одного раза)
		<xsd:complexType name="PurchaseOrderType">
			<xsd:all>
				<xsd:element name="shipTo" type="USAddress"/>
				<xsd:element name="billTo" type="USAddress"/>
				<xsd:element name="comment" ref="comment" minOccurs="0"/>
				<xsd:element name="items" type="Items"/>
			</xsd:all>
			<xsd:attribute name="orderDate" type="xsd:date" />	
		</xsd:complexType>
		
